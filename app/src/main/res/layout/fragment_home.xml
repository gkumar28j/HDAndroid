<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_list_background_color">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recylcer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="@dimen/card_margin_my_list_home"></androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:id="@+id/empty_view"
        style="@style/HomeEmptyViewTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/home_cards_empty_view_background_color"
        android:padding="@dimen/padding_home_cards_list"
        android:text="@string/empty_view_text"
        android:visibility="gone" />

</RelativeLayout>