<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginLeft="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginRight="@dimen/setting_bluetooth_layout_padding"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_profile_username" />

                <TextView
                    android:id="@+id/username_textView"
                    style="@style/SettingUserNameTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    tools:text="User Name" />

                <ImageView
                    android:id="@+id/imageView_edit_username"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_profile_edit" />
            </LinearLayout>


            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginLeft="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginRight="@dimen/setting_bluetooth_layout_padding"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/email_imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_profile_email" />

                <TextView
                    android:id="@+id/email_textView"
                    style="@style/SettingUserNameTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    tools:text="email" />

                <ImageView
                    android:id="@+id/imageView_edit_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_profile_edit" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginLeft="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginRight="@dimen/setting_bluetooth_layout_padding"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/phone_imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_profile_phone" />

                <TextView
                    android:id="@+id/phone_textView"
                    style="@style/SettingUserNameTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    tools:text="phone" />

                <ImageView
                    android:id="@+id/imageView_edit_phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_profile_edit" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginLeft="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/setting_user_email_layout_margin_left"
                android:layout_marginRight="@dimen/setting_bluetooth_layout_padding"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/password_imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_profile_password" />

                <EditText
                    android:id="@+id/password_textView"
                    style="@style/SettingUserNameTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:inputType="textPassword"
                    android:text="123456789" />

                <ImageView
                    android:id="@+id/imageView_edit_password"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_profile_edit" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/location_reminder_textview"
            style="@style/SettingHeadingTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="Be Reminded When Near an Item Location" />

        <LinearLayout
            android:id="@+id/proximity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_bluetooth_layout_padding"
            android:paddingTop="@dimen/setting_bluetooth_layout_padding"
            android:paddingRight="5dp"
            android:paddingBottom="@dimen/setting_bluetooth_layout_padding"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_proxmity_notification" />

            <TextView
                android:id="@+id/textView2"
                style="@style/BluetoothSettingsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/location_reminders"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/proximity_notification_text"
                style="@style/NotificationMilesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1/2 mile" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>

        <TextView
            android:id="@+id/daily_remainder_heading_textview"
            style="@style/SettingHeadingTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="Be Reminded Each Day" />

        <LinearLayout
            android:id="@+id/daily_reminder_expiring_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/setting_bluetooth_layout_padding">


            <ImageView
                android:id="@+id/daily_reminder_expiring_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/expired_item_img" />

            <TextView
                android:id="@+id/daily_reminder_expiring_heading_text"
                style="@style/BluetoothSettingsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/bluetooth_image_view"
                android:layout_weight="1"
                tools:text="Daily Expiring Reminders" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_daily_expiring_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/daily_reminder_expiring_time_textview"
                style="@style/DailyReminderExpiredTimeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bluetooth_image_view"
                android:text="8:00 AM" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/daily_reminder_expired_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/setting_bluetooth_layout_padding">


            <ImageView
                android:id="@+id/daily_reminder_expired_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/expired_item_img" />

            <TextView
                android:id="@+id/daily_reminder_expired_heading_text"
                style="@style/BluetoothSettingsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/bluetooth_image_view"
                android:layout_weight="1"
                tools:text="Daily Expired items" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_daily_expired_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/daily_reminder_expired_time_textview"
                style="@style/DailyReminderExpiredTimeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bluetooth_image_view"
                android:text="8:00 AM" />

        </LinearLayout>

        <TextView
            android:id="@+id/bluetooth_heading_textview"
            style="@style/SettingHeadingTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="Be Reminded When Getting in Your Car" />

        <LinearLayout
            android:id="@+id/bluetooth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/setting_bluetooth_layout_padding">


            <ImageView
                android:id="@+id/bluetooth_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_bluetooth" />

            <TextView
                android:id="@+id/bluetooth_heading_text"
                style="@style/BluetoothSettingsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/bluetooth_image_view"
                android:layout_weight="1"
                tools:text="@string/bluetooth_subheading_text" />

            <!--  <TextView
                  android:id="@+id/bluetooth_settings_sub_Heading"
                  style="@style/BluetoothSubHeadingSettingsText"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/bluetooth_heading_text"
                  android:layout_marginLeft="5dp"
                  android:layout_toRightOf="@id/bluetooth_image_view"
                  android:text="@string/bluetooth_subheading_text" />-->


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/button_sign_out"
            style="@style/SignOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView"
            android:layout_margin="30dp"
            android:text="Sign Out"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>