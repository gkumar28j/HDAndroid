<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mcn.honeydew.ui.contactDetails.ContactDetailsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/circular_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textview_size_xl5"
        android:textStyle="bold"
        tools:text="A" />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Ashish"
        android:textColor="@color/black"
        android:textSize="@dimen/textview_size_xl2" />

    <LinearLayout
        android:id="@+id/numbers_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactName"
        android:layout_marginTop="11dp"
        android:orientation="vertical"
        android:padding="5dp">

    </LinearLayout>
</RelativeLayout>
