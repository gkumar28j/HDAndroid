<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15325B"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView
            android:id="@+id/image_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_logo_margin_left_right"
            android:layout_marginRight="@dimen/text_logo_margin_left_right"
            android:layout_marginTop="@dimen/text_logo_margin_top"
            android:contentDescription="@string/login_heading"
            android:gravity="center"
            android:src="@drawable/hd_text_logo" />-->

        <TextView
            android:id="@+id/textView_heading_login"
            style="@style/LoginHeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="HoneyDew List" />

        <TextView
            android:id="@+id/shareable_textview"
            style="@style/LoginShareableTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_heading_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="A Shareable Todo List App" />

        <TextView
            android:id="@+id/text_sub_heading"
            style="@style/LoginHeadingTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shareable_textview"
            android:layout_marginTop="@dimen/sub_heading_margin_top"
            android:gravity="center"
            android:text="@string/login_sub_heading" />

        <View
            android:id="@+id/view_under_line"
            android:layout_width="@dimen/underline_view_width"
            android:layout_height="2dp"
            android:layout_below="@id/text_sub_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/underline_view_margin_top"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_under_line"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/input_layout_margin_top"
            android:layout_marginLeft="@dimen/input_layout_margin_left_right_bottom"
            android:layout_marginRight="@dimen/input_layout_margin_left_right_bottom"
            android:layout_marginTop="@dimen/input_layout_margin_top"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layout_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/email_edit_text_margin"
                android:background="@drawable/edit_text_border_bg">

                <EditText
                    android:id="@+id/edit_email"
                    style="@style/TextAppearance.Text.Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:padding="@dimen/email_edit_text_padding"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/password_edit_text_margin_bottom"
                android:layout_marginLeft="@dimen/email_edit_text_margin"
                android:layout_marginRight="@dimen/email_edit_text_margin"
                android:layout_marginTop="@dimen/email_edit_text_margin"
                android:background="@drawable/edit_text_border_bg">

                <EditText
                    android:id="@+id/edit_password"
                    style="@style/TextAppearance.Text.Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:padding="@dimen/email_edit_text_padding"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/text_forgot_password"
                style="@style/TextAppearance.Text.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/forgot_password"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_server_login"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/login_sub_heading"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="@string/or"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/text_facebook_login"
            style="@style/FacebookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_layout"
            android:layout_marginLeft="@dimen/facebook_button_margin"
            android:layout_marginRight="@dimen/facebook_button_margin"
            android:gravity="center"
            android:text="@string/sign_in_with_facebook" />

        <TextView
            android:id="@+id/text_sign_up"
            style="@style/TextAppearance.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_facebook_login"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:text="@string/sign_up" />
    </RelativeLayout>
</ScrollView>